@model Domains.TbProduct
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>اضافة المنتجات </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">المنتجات </a></li>
                    <li class="breadcrumb-item active">اضافة المنتجات </li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="form" enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="Product" asp-action="Save">
                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <input type="hidden" asp-for="ProductId">
                                <input type="hidden" asp-for="ProductCategoryName">
                                <input type="hidden" asp-for="CreatedDate">
                                <label for="exampleInputEmail1">اسم المنتج </label>
                                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="ProductName" placeholder="اسم المنتج ">
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">وصف المنتج</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="ProductDescription" placeholder="وصف المنتج">
                                <span asp-validation-for="ProductDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">سعر المنتج</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="ProductPrice" placeholder="سعر المنتج">
                                <span asp-validation-for="ProductPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">بداية الخصم</label>
                                <input type="datetime-local" class="form-control" id="exampleInputPassword1" asp-for="StartDate" placeholder="بداية الخصم">
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">نهاية الخصم</label>
                                <input type="datetime-local" class="form-control" id="exampleInputPassword1" asp-for="EndDate" placeholder="نهاية الخصم">
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">نسبة الخصم</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="DiscountPercent" placeholder="نسبة الخصم">
                                <span asp-validation-for="DiscountPercent" class="text-danger"></span>
                            </div>



                            <section class="content">
                                <div class="container-fluid">
                                    <!-- SELECT2 EXAMPLE -->
                                    <div class="card card-default">
                                        <div class="card-header">
                                            <h3 class="card-title">قسم المنتج</h3>


                                        </div>
                                        <!-- /.card-header -->
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>قسم المنتج</label>
                                                        <select asp-for="ProductCategoryId" asp-items="@(new SelectList(ViewBag.cities , "ProductCategoryId" , "ProductCategoryName"))" class="form-control select2" style="width: 100%;" required>
                                                            <option value="">اختر</option>


                                                        </select>
                                                        <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
                                                    </div>

                                                </div>

                                            </div>
                                            <!-- /.row -->
                                        </div>
                                        <!-- /.card-body -->

                                    </div>
                                    <!-- /.card -->

                                </div>
                            </section>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
                <!-- /.card -->

            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
