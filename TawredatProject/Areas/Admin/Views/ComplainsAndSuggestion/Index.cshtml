@model TawredatProject.Models.HomePageModel
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>عرض الشكاوي و الاقتراحات</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">الشكاوي و الاقتراحات</a></li>
                    <li class="breadcrumb-item active">عرض الشكاوي و الاقتراحات</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">


            <div class="card">
                <div class="card-header">
                   
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped ">
                        <thead>
                            <tr>
                                <th>اسم صاحب الشكوي</th>
                                <th>ايميل صاحب الشكوي</th>
                                <th>نص الشكوي او الاقتراح</th>
                                <th>التاريخ </th>
                               
                              
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.lstComplainsAndSuggestions)
                            {

                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.ComplaintsAndSuggestionsText
                                    </td>
                                    <td>
                                        @item.CreatedDate
                                    </td>

                                 
                                  
                                  
                                   
                                </tr>

                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>اسم صاحب الشكوي</th>
                                <th>ايميل صاحب الشكوي</th>
                                <th>نص الشكوي او الاقتراح</th>
                                <th>التاريخ </th>

                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
