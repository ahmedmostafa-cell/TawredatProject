@model Domains.TbSlider
<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
                <h1>اضافة السليدر </h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">السليدر </a></li>
                    <li class="breadcrumb-item active">اضافة السليدر </li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
               
              </div>
              <!-- /.card-header -->
              <!-- form start -->
                    <form id="form" enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="Slider" asp-action="Save">
                <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                  <div class="form-group">
                                <input type="hidden"  asp-for="SliderId" >
                                <input type="hidden" asp-for="CreatedDate">
                                <label for="exampleInputEmail1">عنوان  السليدر</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="SliderTitle" placeholder="عنوان السليدر ">
                                <span asp-validation-for="SliderTitle" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                                <label for="exampleInputPassword1">تفاصيل السليدر </label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="SliderText" placeholder="تفاصيل السليدر ">
                                <span asp-validation-for="SliderText" class="text-danger"></span>
                  </div>
                   <div class="form-group">
                                <label for="exampleInputPassword1">مكان السليدر </label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="SliderLocation" placeholder="مكان السليدر ">
                                <span asp-validation-for="SliderLocation" class="text-danger"></span>
                   </div>
                   <div class="form-group">
                                <label for="exampleInputPassword1">ترتيب السليدر </label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="OrderNo" placeholder="ترتيب السليدر ">
                                <span asp-validation-for="OrderNo" class="text-danger"></span>
                   </div>
                 
                  <div class="form-group">

                                <div class="input-group mb-3">
                                    <div class="custom-file">
                                        <label for="exampleInputPassword1">صورة السليدر </label>
                                        <input  required  type="file" name="files" id="selectedFile" />
                                        <div class="text-danger" id="error"></div>
                                    </div>
                                   
                                </div>
                  </div>
                
                 
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->

          
            <!-- /.card -->

          </div>
          <!--/.col (left) -->
      
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
