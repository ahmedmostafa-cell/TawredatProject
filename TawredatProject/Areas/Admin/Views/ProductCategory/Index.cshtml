@model TawredatProject.Models.HomePageModel
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>عرض اقسام المنتجات</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">اقسام المنتجات</a></li>
                    <li class="breadcrumb-item active">عرض اقسام المنتجات</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">


            <div class="card">
                <div class="card-header">
                   
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped ">
                        <thead>
                            <tr>
                                <th>اسم قسم المنتج</th>
                                <th>وصف قسم المنتج</th>
                                <th>صورة قسم المنتج</th>
                               
                                <th>تعديل</th>
                               
                                <th>حذف</th>
                              
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.lstProductCategories)
                            {

                                <tr>
                                    <td>@item.ProductCategoryName</td>
                                    <td>
                                        @item.ProductCategoryDescription
                                    </td>
                                   
                                    <td style="width:10%">
                                       
                                            <img style="max-width: 100%; " max-height: 100%;" src="@string.Format("/Uploads/{0}",item.ProductCategoryImage)" alt="Img placeholder">

                                           
                                          
                                       
                                       
                                    </td>
                                   
                                    <td>
                                        <a asp-area="Admin" asp-controller="ProductCategory" asp-action="Form" asp-route-id="@item.ProductCategoryId" class="btn btn-info text-white" style="cursor:pointer">
                                            تعديل
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="ProductCategory" asp-action="Delete" asp-route-id="@item.ProductCategoryId" class="btn btn-danger text-white" style="cursor:pointer">
                                            حذف
                                        </a>
                                    </td>
                                  
                                   
                                </tr>

                            }


                        </tbody>
                        <tfoot>
                            <tr>
                              <th>اسم قسم المنتج</th>
                                <th>وصف قسم المنتج</th>
                                <th>صورة قسم المنتج</th>

                                <th>تعديل</th>

                                <th>حذف</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
