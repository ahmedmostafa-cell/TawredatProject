@model TawredatProject.Models.HomePageModel
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>عرض طريقة دفع</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">طريقة دفع</a></li>
                    <li class="breadcrumb-item active">عرض طريقة دفع</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">


            <div class="card">
                <div class="card-header">
                   
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped ">
                        <thead>
                            <tr>
                                <th>اسم طريقة دفع</th>
                                <th>وصف طريقة دفع</th>
                              
                                <th>تعديل</th>

                                <th>حذف</th>
                              
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.lstPaymentMethods)
                            {

                                <tr>
                                    <td>@item.PaymentMethodName</td>
                                    <td>
                                        @item.PaymentMethodDescription
                                    </td>
                                    <td>
                                 
                                    <td>
                                        <a asp-area="Admin" asp-controller="PaymentMethod" asp-action="Form" asp-route-id="@item.PaymentMethodId" class="btn btn-info text-white" style="cursor:pointer">
                                            تعديل
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="PaymentMethod" asp-action="Delete" asp-route-id="@item.PaymentMethodId" class="btn btn-danger text-white" style="cursor:pointer">
                                            حذف
                                        </a>
                                    </td>
                                  
                                   
                                </tr>

                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>اسم طريقة دفع</th>
                                <th>وصف طريقة دفع</th>

                                <th>تعديل</th>

                                <th>حذف</th>

                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
