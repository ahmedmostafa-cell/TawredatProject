@model TawredatProject.Models.HomePageModel
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>عرض الفواتير  </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">الفواتير   </a></li>
                    <li class="breadcrumb-item active">عرض الفواتير   </li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">


            <div class="card">
                <div class="card-header">
                   
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped ">
                        <thead>
                            <tr>
                                
                                <th> ميعاد الوصول </th>
                                <th>اسم المشتري </th>
                                <th>اسم رجل التوصيل </th>
                               
                                <th>اسم التاجر     </th>
                                <th>اسم طريقة الدفع     </th>
                                <th>اجمالي قيمة الفاتورة       </th>
                                <th>مكان  التسليم     </th>
                                <th>حالة التوصيل </th>
                               
                         
                              
                                <th>التاريخ  </th>
                              
                              
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.lstSalesInvoices)
                            {

                                <tr>
                                    <td>@item.DelivryDate</td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.DeliveryManName
                                    </td>
                                   
                                    
                                    <td>
                                        @item.SupplierName
                                    </td>
                                   
                                    <td>
                                        @item.PaymnetMethodName
                                    </td>
                                    <td>
                                        @item.TotalInvoiceValue
                                    </td>
                                    <td>
                                        @item.DeliveryAddress
                                    </td>
                                     <td>
                                        @item.DeliveryStatus
                                    </td>
                                  
                                    <td>
                                        @item.CreatedDate
                                    </td>

                                
                                   
                                </tr>

                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th> ميعاد الوصول </th>
                                <th>اسم المشتري </th>
                                <th>اسم رجل التوصيل </th>

                                <th>اسم التاجر     </th>
                                <th>اسم طريقة الدفع     </th>
                                <th>اجمالي قيمة الفاتورة       </th>
                                <th>مكان  التسليم     </th>
                                <th>حالة التوصيل </th>



                                <th>التاريخ  </th>

                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
