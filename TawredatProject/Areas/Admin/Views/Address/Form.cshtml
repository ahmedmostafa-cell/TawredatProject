@model Domains.TbAddress
<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
                <h1>اضافة العناوين</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">العناوين </a></li>
                    <li class="breadcrumb-item active">اضافة العناوين</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
               
              </div>
              <!-- /.card-header -->
              <!-- form start -->
                    <form id="form" enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="Address" asp-action="Save">
                <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                  <div class="form-group">
                                <input type="hidden"  asp-for="AddressId" >
                                <input type="hidden" asp-for="CreatedDate">
                                <label for="exampleInputEmail1">اسم صاحب العنوان</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="Name" placeholder="اسم صاحب العنوان">
                                <span asp-validation-for="Name" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                                <label for="exampleInputPassword1">خطوط الطول</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="Addresslongitude" placeholder="خطوط الطول">
                                <span asp-validation-for="Addresslongitude" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                                <label for="exampleInputPassword1">خطوط العرض</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="AddressLatitude" placeholder="خطوط العرض">
                                <span asp-validation-for="AddressLatitude" class="text-danger"></span>
                   </div>
                    <div class="form-group">
                                <label for="exampleInputPassword1">اسم الشارع</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="AddressStreet" placeholder="اسم الشارع">
                                <span asp-validation-for="AddressStreet" class="text-danger"></span>
                   </div>
                   <div class="form-group">
                                <label for="exampleInputPassword1">اسم المنطقة</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="AddressCity" placeholder="اسم المنطقة">
                                <span asp-validation-for="AddressCity" class="text-danger"></span>
                    </div>
                   <div class="form-group">
                                <label for="exampleInputPassword1">اسم المدينة</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="AddressArea" placeholder="اسم المدينة">
                                <span asp-validation-for="AddressArea" class="text-danger"></span>
                    </div>
                   <div class="form-group">
                                <label for="exampleInputPassword1">اسم الدولة</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="AddressCountry" placeholder="اسم الدولة">
                                <span asp-validation-for="AddressCountry" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group">
                                <label for="exampleInputPassword1">رقم التليفون</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="PhoneNumber" placeholder="رقم التليفون">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                     </div>

                            <section class="content">
                                <div class="container-fluid">
                                    <!-- SELECT2 EXAMPLE -->
                                    <div class="card card-default">
                                        <div class="card-header">
                                            <h3 class="card-title">هل عنوان رئيسي</h3>


                                        </div>
                                        <!-- /.card-header -->
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>هل عنوان رئيسي</label>
                                                        <select asp-for="MainAddress" class="form-control select2" style="width: 100%;" required>
                                                            <option value="">اختر</option>
                                                            <option value="نعم">نعم</option>
                                                            <option value="لا">لا</option>

                                                        </select>
                                                        <span asp-validation-for="MainAddress" class="text-danger"></span>
                                                    </div>

                                                </div>

                                            </div>
                                            <!-- /.row -->
                                        </div>
                                        <!-- /.card-body -->

                                    </div>
                                    <!-- /.card -->

                                </div>
                            </section>
                
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->

          
            <!-- /.card -->

          </div>
          <!--/.col (left) -->
      
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
