@model Domains.TbCharge
<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
                <h1>اضافة الشحن</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">الشحن</a></li>
                    <li class="breadcrumb-item active">اضافة الشحن</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
               
              </div>
              <!-- /.card-header -->
              <!-- form start -->
                    <form id="form" enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="Charge" asp-action="Save">
                <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                  <div class="form-group">
                                <input type="hidden"  asp-for="ChargeId" >
                                <label for="exampleInputEmail1">اسم الشخص الشاحن</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="CreatedBy" placeholder="اسم المكتب المعتمد">
                                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                  </div>
                
                  <div class="form-group">
                                <label for="exampleInputPassword1">قيمة الشحن </label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="ChargeValue" placeholder="قيمة الشحن">
                                <span asp-validation-for="ChargeValue" class="text-danger"></span>
                   </div>

                            <section class="content">
                                <div class="container-fluid">
                                    <!-- SELECT2 EXAMPLE -->
                                    <div class="card card-default">
                                        <div class="card-header">
                                            <h3 class="card-title">نوع الشحن</h3>


                                        </div>
                                        <!-- /.card-header -->
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>نوع الشحن</label>
                                                        <select asp-for="ChargeType" class="form-control select2" style="width: 100%;" required>
                                                            <option value="">اختر</option>
                                                            <option value="ايداع">ايداع</option>
                                                            <option value="ارتجاع">ارتجاع</option>

                                                        </select>
                                                        <span asp-validation-for="ChargeType" class="text-danger"></span>
                                                    </div>

                                                </div>

                                            </div>
                                            <!-- /.row -->
                                        </div>
                                        <!-- /.card-body -->

                                    </div>
                                    <!-- /.card -->

                                </div>
                            </section>
                 
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->

          
            <!-- /.card -->

          </div>
          <!--/.col (left) -->
      
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
<script type="application/javascript">
